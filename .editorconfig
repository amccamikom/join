# editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

#everything php following Laravel style guide
[*.php]
indent_style = space
indent_size = 4

#override for blade since its mostly html
[*.blade.php]
indent_style = space
indent_size = 2

#I think most people use 2 spaces for these?
[*.{scss,css,js,html}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[composer.json]
indent_style = space
indent_size = 4
